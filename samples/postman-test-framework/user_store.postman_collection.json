									"  const responseData = pm.response.json();\r",
									"  \r",
									"  pm.expect(responseData).to.be.an('object');\r",
									"  if (responseData.dateOfBirth) {\r",
									"    pm.expect(new Date(responseData.dateOfBirth)).to.not.eql('Invalid Date');\r",
									"  } else {\r",
									"    pm.expect(responseData.dateOfBirth).to.exist.and.to.be.a('string').and.to.have.lengthOf.at.least(1, \"Value should not be empty\");\r",
									"  }\r",
									"});\r",
